---
import Heading from "@/components/Heading.astro";
import MainHead from "@/components/MainHead.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Astro Starter",
  description = "Change the default description",
} = Astro.props;
---

<html lang="en">
  <MainHead {title} {description} />
  <body>
    <header class="w-screen text-center text-secondary p-10">
      <Heading tagName="h1" size="h1">MATH</Heading>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
